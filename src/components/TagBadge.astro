import type { Tag } from '../utils/data-utils';

interface Props {
    tag: Tag;
    size?: 'sm' | 'md' | 'lg';
    showCount?: boolean;
    count?: number;
    class?: string;
}

const { tag, size = 'md', showCount = false, count, class: className } = Astro.props;

const sizeClasses = {
    sm: 'px-2 py-0.5 text-xs',
    md: 'px-3 py-1 text-sm',
    lg: 'px-4 py-1.5 text-base'
};

<a 
    href={`/tags/${tag.slug}`}
    class:list={[
        'inline-flex items-center rounded-full font-medium transition-all hover:opacity-80',
        sizeClasses[size],
        className
    ]}
    style={`background-color: ${tag.color}20; color: ${tag.color};`}
>
    {tag.name}
    {showCount && count !== undefined && (
        <span class="ml-1.5 inline-flex items-center justify-center rounded-full bg-white bg-opacity-25 px-1.5 py-0.5 text-xs">
            {count}
        </span>
    )}
</a> 